server {
  # only listen to https here
  listen        443 ssl http2;
  listen        [::]:443 ssl http2;
  server_name   crypter.dev;

  access_log                      /var/log/nginx/crypter.dev.access.log;
  error_log                       /var/log/nginx/crypter.dev.error.log;
  ssl_certificate                 /etc/letsencrypt/live/crypter.dev/fullchain.pem;
  ssl_certificate_key             /etc/letsencrypt/live/crypter.dev/privkey.pem;
  ssl_session_timeout             10m;
  ssl_protocols                   TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers       on;
  ssl_buffer_size                 8k;

  client_max_body_size 10M;
  
  root /var/www/Crypter.Web/wwwroot;

  location / {
    index index.html;
    error_page 404 = /;
  }

  location /api/ {
    proxy_pass http://127.0.0.1:8000;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_Addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

server {
  listen        80;
  listen        [::]:80;
  server_name   crypter.dev;
  return        301 https://crypter.dev/;
}