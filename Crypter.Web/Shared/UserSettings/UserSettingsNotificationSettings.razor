 @inherits UserSettingsNotificationSettingsBase

 @if (IsDataReady)
{
   <form>
      <div class="form-check form-switch">
         <label class="form-check-label" for="enableTransferNotifications">Notify me when I receive something</label>
         <input @bind="EnableTransferNotificationsEdit" class="form-check-input" type="checkbox" id="enableTransferNotifications" disabled="@(!IsEditing)" />
      </div>
      <h3>Notification Methods</h3>
      <div class="form-check form-switch">
         <label class="form-check-label" for="enableEmailNotifications">Email</label>
         <input @bind="EnableTransferNotificationsEdit" class="form-check-input" type="checkbox" id="enableEmailNotifications" disabled="@(!IsEditing)" />
      </div>
      <div class="mb-3">
         <span class="small text-secondary">*Alternative notifications methods are not available yet</span>
      </div>
      <button type="button" class="btn btn-secondary mx-auto" @onclick="OnEditClicked" hidden="@IsEditing" disabled="@(!EmailAddressVerified)">Edit</button>
      <button type="button" class="btn btn-secondary mx-auto" @onclick="OnCancelClicked" hidden="@(!IsEditing)">Cancel</button>
      <button type="button" class="btn btn-primary mx-auto" @onclick="OnSaveClickedAsync" hidden="@(!IsEditing)">Save</button>

      @if (!EmailAddressVerified)
      {
         <div>
            <span class="text-danger">Notifications require a verified email address</span>
         </div>
      }
   </form>
}
