@inherits UploadMessageTransferModalBase

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h3 class="my-0">Upload a Message</h3>
         </div>
         <div class="modal-body justify-content-center">
            <UploadMessageTransfer IsSenderDefined="@IsSenderDefined" SenderX25519PrivateKey="@SenderX25519PrivateKey" SenderEd25519PrivateKey="@SenderEd25519PrivateKey" IsRecipientDefined="@IsRecipientDefined" RecipientId="@RecipientId" RecipientX25519PublicKey="@RecipientX25519PublicKey" RecipientEd25519PublicKey="@RecipientEd25519PublicKey" RequestedExpirationHours="24" UploadCompletedEvent="@CloseAsync" />
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="() => CloseAsync()">Close</button>
         </div>
      </div>
   </div>
</div>

@if (ShowBackdrop)
{
   <div class="modal-backdrop fade show"></div>
}
