@page "/recovery"

<PageTitle>Crypter - Recovery</PageTitle>

<div class="container my-4">
    <h1>Account Recovery</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <p class="fw-bold">@_username</p>
            </div>

            @if (_recoverySucceeded)
            {
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Recovery Success!</h4>
                    <p>Your password was successfully reset.</p>
                    <p>You may now login with your new password. You will be prompted to copy a new recovery key after you login.</p>
                </div>
            }
            else
            {
                <form @onsubmit:preventDefault @onsubmit="SubmitRecoveryAsync">
                    <div class="mb-3">
                        <label for="newPasswordFormControl" class="form-label">New Password</label>
                        <input type="password" @bind="_newPassword" class="form-control" id="newPasswordFormControl"/>
                    </div>

                    <div class="mb-3">
                        <label for="newPasswordConfirmFormControl" class="form-label">Confirm New Password</label>
                        <input type="password" @bind="_newPasswordConfirm" class="form-control" id="newPasswordConfirmFormControl"/>
                    </div>

                    <div class="mb-3">
                        <p>Recovery Key</p>
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="recoveryKeySwitch">I have my recovery key</label>
                            <input @bind="_recoveryKeySwitch" class="form-check-input" type="checkbox" id="recoveryKeySwitch"/>
                        </div>

                        @if (_recoveryKeySwitch)
                        {
                            <input type="text" @bind="_recoveryKeyInput" class="form-control" id="recoveryKeyFormControl"/>
                        }
                        else
                        {
                            <p class="text-danger">
                                All your encrypted messages and files will be lost if you proceed without providing your recovery key.
                            </p>
                        }
                    </div>

                    <div hidden="@(string.IsNullOrEmpty(_recoveryErrorMessage))" class="alert alert-danger" role="alert">
                        @_recoveryErrorMessage
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            }
        </div>
    </div>
</div>
