@page "/login"

@inherits LoginBase

<PageTitle>Crypter - Login</PageTitle>

<div class="container my-4">
   @if(!Loading)
   {
       <div class="row">
           <div class="col-md-8">
               <h1>Login to get more benefits from Crypter.dev</h1>
               <ul>
                   <li>Decrypt without having to receive a decryption key from the sender</li>
                   <li>Receive email notifications when someone sends you something</li>
                   <li>And much more...</li>
               </ul>
               <p>
                   Don't have an account?
                   <a href="/register">Register here!</a>
               </p>
           </div>
           <div class="col-md-4">
               <LoginComponent />
           </div>
       </div>
   }
</div>
