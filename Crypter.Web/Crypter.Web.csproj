<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

   <PropertyGroup>
      <TargetFramework>net9.0</TargetFramework>
      <Nullable>enable</Nullable>
      <ImplicitUsings>disable</ImplicitUsings>
      <ApplicationIcon />
      <OutputType>Exe</OutputType>
      <RunAOTCompilation>false</RunAOTCompilation>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
      <StartupObject />

      <EmccInitialHeapSize>134217728</EmccInitialHeapSize>

      <LangVersion>12</LangVersion>
   </PropertyGroup>

   <ItemGroup>
      <PackageReference Include="ByteSize" Version="2.1.2" />
      <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0-preview.2.24128.4" />
      <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.0-preview.2.24128.4" />
      <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0-preview.2.24128.5" />
      <PackageReference Include="Microsoft.NET.ILLink.Tasks" Version="9.0.0-preview.2.24128.5" />
      <PackageReference Include="Microsoft.NET.Sdk.WebAssembly.Pack" Version="9.0.0-preview.2.24128.5" />
   </ItemGroup>

   <ItemGroup>
      <ProjectReference Include="..\Crypter.Common\Crypter.Common.csproj" />
      <ProjectReference Include="..\Crypter.Common.Client\Crypter.Common.Client.csproj" />
      <ProjectReference Include="..\Crypter.Crypto.Common\Crypter.Crypto.Common.csproj" />
      <ProjectReference Include="..\Crypter.Crypto.Providers.Browser\Crypter.Crypto.Providers.Browser.csproj" />
   </ItemGroup>

   <ItemGroup>
     <Folder Include="wwwroot\js\dist\serviceWorker\" />
     <Folder Include="wwwroot\js\dist\streamSaver\" />
   </ItemGroup>

   <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
      <Exec Command="pnpm install --force" />
      <Exec Command="pnpm run build" />
      <Exec Command="pnpm run buildWorker" />
   </Target>
   
</Project>
