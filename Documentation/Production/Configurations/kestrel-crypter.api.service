[Unit]
Description=Crypter.API runner

[Service]
WorkingDirectory=/var/www/Crypter.API
ExecStart=/usr/bin/dotnet /var/www/Crypter.API/Crypter.API.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-crypter-api
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://*:8000

[Install]
WantedBy=multi-user.target
